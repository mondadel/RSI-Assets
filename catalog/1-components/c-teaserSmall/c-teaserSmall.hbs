        </div>

        {{#if showLiveMark}}
          <div class="c-teaserSmall_liveMark u-d-none@md">
            {{render '@c-livemark' c-liveMark merge=true}}
          </div>
        {{/if}}

    {{#if teaserStatus}}
      <div class="c-teaserSmall_teaserStatus">
        <span class="c-teaserSmall_teaserStatus_text">{{teaserStatus-text}} {{render '@c-icon' c-icon merge=true}} </span>
        <span class="c-teaserSmall_teaserStatus_time">{{teaserStatus-time}}</span>
      </div>
    {{/if}}

    </div>

</div>
