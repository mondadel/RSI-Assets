<section class="section {{class}} {{class-layout}}">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				{{#if heroImgShow}}
					{{render '@c-heroimg' c-heroImg merge=true}}
				{{/if}}

				{{#if heroImgRelatedShow}}
					{{render '@c-heroimg--related-4x3' c-heroImgRelated merge=true}}
				{{/if}}
			</div>

			{{#each teasers}}
				<div class="col-sm-6 col-md-3 u-push-top u-push-top-none@md">
					{{render '@c-teaser' c-teaser merge=true}}
				</div>
			{{/each}}
		</div>
	</div>
</section>
